<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_background"
               >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background"
        android:orientation="vertical">
    <include layout="@layout/base_header" />
        <RelativeLayout
            android:id="@+id/layoutStore"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sumbit_height"
            android:background="@color/main_LinearLayout_background"
             >

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="服务类型"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_storeType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="1"
                    android:maxEms="12"
                    android:ellipsize="end"
                    android:text="顶藏保证金"
                    android:textColor="@color/text_color_thirst"
                    android:textSize="@dimen/main_text_size" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/paddingLeft"
            android:layout_marginRight="@dimen/paddingRight"
            android:background="@color/line_color_first" />
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sumbit_height"
            android:background="@color/main_LinearLayout_background"
            >

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="有效期"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="1"
                    android:maxEms="12"
                    android:ellipsize="end"
                    android:text="永久"
                    android:textColor="@color/text_color_thirst"
                    android:textSize="@dimen/main_text_size" />

            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/paddingLeft"
            android:layout_marginRight="@dimen/paddingRight"
            android:background="@color/line_color_first" />
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sumbit_height"
            android:background="@color/main_LinearLayout_background"
            >

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="生效时间"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_todate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="1"
                    android:maxEms="12"
                    android:ellipsize="end"
                    android:text="订购成功后立即生效"
                    android:textColor="@color/text_color_thirst"
                    android:textSize="@dimen/main_text_size" />

            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/paddingLeft"
            android:layout_marginRight="@dimen/paddingRight"
            android:background="@color/line_color_first" />
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sumbit_height"
            android:background="@color/main_LinearLayout_background"
            >

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="商家名称"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_storename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="1"
                    android:maxEms="12"
                    android:ellipsize="end"

                    android:textColor="@color/text_color_thirst"
                    android:textSize="@dimen/main_text_size" />

            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/paddingLeft"
            android:layout_marginRight="@dimen/paddingRight"
            android:background="@color/line_color_first" />
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sumbit_height"
            android:background="@color/main_LinearLayout_background"
            >

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="保证金"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="1"
                    android:maxEms="12"
                    android:ellipsize="end"
                    android:textColor="@color/text_color_thirst"
                    android:textSize="@dimen/main_text_size" />

            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_first" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pay_commit"
        android:layout_width="match_parent"
        android:layout_height="45.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/main_LinearLayout_background"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_0.5dp"
            android:background="@color/line_color_first"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="总计："
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size"/>

            <TextView
                android:id="@+id/shoppingCart_buyPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥0"
                android:textColor="@color/main_red"
                android:textSize="@dimen/main_text_size"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/sumbit_pay"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/red_solid_shape"
                    android:gravity="center"
                    android:text="去支付"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_text_size"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
