<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:id="@+id/all_laytout"
              android:layout_height="wrap_content"
              android:orientation="vertical"

    >

    <com.property.colpencil.colpencilandroidlibrary.Ui.SelectableRoundedImageView
        android:id="@+id/iv_head"
        android:layout_gravity="center_horizontal"
        android:layout_width="102px"
        android:layout_height="102px"
        android:layout_marginBottom="20px"
        android:layout_marginTop="30px"
        app:sriv_oval="true"/>

    <TextView
        android:id="@+id/store_name"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:text="121313"
        android:maxLines="1"
        android:maxEms="6"
        android:ellipsize="end"
        android:textColor="#333333"
        android:textSize="24px"/>

    <LinearLayout
        android:id="@+id/layout_care_uncare"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/layout_care"
            android:layout_width="124px"
            android:layout_height="50px"
            android:background="@drawable/line2_line_transparent_shape"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@drawable/focus_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textColor="@color/main_brown"
                android:textSize="14sp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_uncare"
            android:layout_width="140px"
            android:layout_height="50px"
            android:background="@drawable/line2_line_transparent_shape"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消关注"
                android:textColor="@color/main_brown"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_fff5f4"/>

</LinearLayout>
