<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/layout_status"
                android:visibility="gone">

    <ImageView
        android:id="@+id/apply_iv"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@mipmap/applying"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/apply_iv"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="审核中"
        android:textColor="@color/text_color_first"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tv_status_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_status"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="您的申请已提交，请耐心等待！"
        android:textColor="@color/text_color_thirst"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_resion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_status_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="您的申请已提交，请耐心等待！"
        android:textColor="@color/main_red"
        android:textSize="15sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/tv_resion"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="78dp"
        android:background="@drawable/red_solid_shape"
        android:gravity="center"
        android:text="重新提交"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_corperate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="@string/corperate_line"
        android:textColor="@color/main_brown"
        android:textSize="18sp"/>
</RelativeLayout>