<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color_thirst"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fffbfa"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/detail_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10px"
            android:visibility="visible"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0.5dp"
        android:background="@color/line_color_second"/>

    <LinearLayout
        android:id="@+id/ll_category_content"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/color_fffbfa"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28px"
            android:text="商品分类："
            android:textColor="@color/text_color_first"
            android:textSize="28px"/>


        <LinearLayout
            android:id="@+id/ll_category"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_news_category"
                android:layout_width="@dimen/width_0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="请选择商品分类"
                android:textColor="@color/text_color_thirst"
                android:textSize="28px"/>

            <ImageView
                android:layout_width="14px"
                android:layout_height="24px"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="30px"
                android:src="@mipmap/right_icon"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0.5dp"
        android:background="@color/line_color_second"/>

    <LinearLayout
        android:id="@+id/ll_zc_content"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="@color/color_fffbfa"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="28px"
                android:text="专场名称："
                android:textColor="@color/text_color_first"
                android:textSize="28px"/>


            <LinearLayout
                android:id="@+id/ll_zc"
                android:layout_width="@dimen/width_0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/zc_tv"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="请选择专场名称"
                    android:textColor="@color/text_color_thirst"
                    android:textSize="28px"/>

                <ImageView
                    android:layout_width="14px"
                    android:layout_height="24px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="30px"
                    android:src="@mipmap/right_icon"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0.5dp"
        android:background="@color/line_color_second"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"

        android:background="@color/color_fffbfa"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:text="商品名称："
            android:textColor="@color/text_color_first"
            android:textSize="28px"/>

        <EditText
            android:id="@+id/post_title"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="不超过40个字"
            android:maxLength="40"
            android:textColor="@color/text_color_thirst"
            android:textColorHint="@color/text_color_thirst"
            android:textCursorDrawable="@null"
            android:textSize="28px"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/line_color_thirst"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"

        android:background="@color/color_fffbfa"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/store_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:text="销售价："
            android:textColor="@color/text_color_first"
            android:textSize="28px"/>

        <EditText
            android:id="@+id/edt_store_price"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:background="@null"
            android:maxLength="20"
            android:hint="给商品定个好价格"
            android:textColor="@color/text_color_thirst"
            android:textColorHint="@color/text_color_thirst"
            android:textCursorDrawable="@null"
            android:textSize="28px"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0.5dp"
        android:background="@color/line_color_second"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"

        android:background="@color/color_fffbfa"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:text="市场价："
            android:textColor="@color/text_color_first"
            android:textSize="28px"/>

        <EditText
            android:id="@+id/edt_maket_price"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入市场价"
            android:inputType="number"
            android:maxLength="20"
            android:textColor="@color/text_color_thirst"
            android:textColorHint="@color/text_color_thirst"
            android:textCursorDrawable="@null"
            android:textSize="28px"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0.5dp"
        android:background="@color/line_color_second"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"

        android:background="@color/color_fffbfa"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/store_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:text="库    存："
            android:textColor="@color/text_color_first"
            android:textSize="28px"/>

        <EditText
            android:id="@+id/edt_store_left"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入库存"
            android:maxLength="20"
            android:inputType="number"
            android:textColor="@color/text_color_thirst"
            android:textColorHint="@color/text_color_thirst"
            android:textCursorDrawable="@null"
            android:textSize="28px"/>

    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/padding_0.5dp"-->
        <!--android:background="@color/line_color_second"/>-->

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="88px"-->

        <!--android:background="@color/color_fffbfa"-->
        <!--android:orientation="horizontal">-->

        <!--<ImageView-->
            <!--android:layout_width="38px"-->
            <!--android:layout_height="38px"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_marginLeft="30px"-->
            <!--android:src="@mipmap/publis_add"/>-->

        <!--<TextView-->

            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_marginLeft="30px"-->
            <!--android:text="添加商品规格"-->
            <!--android:textColor="@color/text_color_first"-->
            <!--android:textSize="28px"/>-->
    <!--</LinearLayout>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/line_color_thirst"/>

    <RelativeLayout
        android:id="@+id/layout_add_subcribe"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/color_fffbfa">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:text="商品图文描述"
            android:textColor="@color/text_color_first"
            android:textSize="28px"/>

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="14px"
            android:layout_height="24px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:src="@mipmap/right_icon"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:layout_marginRight="20px"
            android:layout_toLeftOf="@id/iv_left"
            android:text="未添加"
            android:textColor="@color/text_color_first"
            android:textSize="28px"/>

    </RelativeLayout>

    <TextView

        android:id="@+id/tv_submit_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:gravity="center_horizontal"
        android:text="提交申请，审核通过后才能上架销售"
        android:textColor="#989898"
        android:textSize="28px"
        android:visibility="gone"/>
</LinearLayout>
