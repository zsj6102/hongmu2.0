<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_fffbfa"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_payForGood"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp">


            <TextView
                android:id="@+id/price_payForGood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:textColor="@color/main_red"
                android:textSize="@dimen/main_text_size"/>

            <TextView
                android:id="@+id/name_payForGood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/price_payForGood"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size"/>

            <TextView
                android:id="@+id/type_payForGood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_color_thirst"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/cout_payForGood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_color_thirst"
                android:textSize="13sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/bottom_layout"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sumbit_height"
            android:layout_marginTop="10dp"
            android:background="@color/main_LinearLayout_background"
            android:paddingLeft="@dimen/paddingLeft"
            android:paddingRight="@dimen/paddingRight"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="配送方式"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_deliver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/text_color_thirst"
                    android:textSize="@dimen/main_text_size"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:src="@mipmap/right_icon"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sumbit_height"
            android:layout_marginTop="10dp"
            android:background="@color/main_LinearLayout_background"
            android:paddingLeft="@dimen/paddingLeft"
            android:paddingRight="@dimen/paddingRight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="商品金额"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_userInforId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/text_color_thirst"
                    android:textSize="@dimen/main_text_size"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sumbit_height"
            android:layout_marginTop="10dp"
            android:background="@color/main_LinearLayout_background"
            android:paddingLeft="@dimen/paddingLeft"
            android:paddingRight="@dimen/paddingRight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="优惠券"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_youhuiquan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/text_color_thirst"
                    android:textSize="@dimen/main_text_size"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:src="@mipmap/right_icon"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sumbit_height"
            android:layout_marginTop="10dp"
            android:background="@color/main_LinearLayout_background"
            android:paddingLeft="@dimen/paddingLeft"
            android:paddingRight="@dimen/paddingRight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="代金券"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_daijinquan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/text_color_thirst"
                    android:textSize="@dimen/main_text_size"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:src="@mipmap/right_icon"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sumbit_height"
            android:layout_marginTop="10dp"
            android:background="@color/main_LinearLayout_background"
            android:paddingLeft="@dimen/paddingLeft"
            android:paddingRight="@dimen/paddingRight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="促销代扣"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/text_color_thirst"
                    android:textSize="@dimen/main_text_size"/>


            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sumbit_height"
            android:layout_marginTop="10dp"
            android:background="@color/main_LinearLayout_background"
            android:paddingLeft="@dimen/paddingLeft"
            android:paddingRight="@dimen/paddingRight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="需付款"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_needpay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/text_color_thirst"
                    android:textSize="@dimen/main_text_size"/>


            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sumbit_height"
            android:layout_marginTop="10dp"
            android:background="@color/main_LinearLayout_background"
            android:paddingLeft="@dimen/paddingLeft"
            android:paddingRight="@dimen/paddingRight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="给卖家留言:"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/post_content"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@drawable/input_transparent_shape"
            android:gravity="left"
            android:hint="有什么给卖家提醒的，请写在这里"
            android:paddingLeft="@dimen/margin_15dp"
            android:paddingTop="@dimen/margin_15dp"
            android:textColor="@color/text_color_thirst"
            android:textColorHint="@color/text_color_thirst"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_14sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color_second"/>

</LinearLayout>
