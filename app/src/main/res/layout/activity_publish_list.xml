<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff5f4"
              android:orientation="vertical">

    <include layout="@layout/base_header"/>


    <RelativeLayout
        android:id="@+id/layout_supai"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@color/main_LinearLayout_background">

        <ImageView
            android:id="@+id/iv_supai"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:src="@mipmap/pub_list_supai"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/iv_supai"
            android:text="速拍区"
            android:textColor="#333333"
            android:textSize="32px"/>

        <ImageView
            android:layout_width="14px"
            android:layout_height="24px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:src="@mipmap/right_icon"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color_second"/>

    <RelativeLayout
        android:id="@+id/layout_pinpai_mingshi"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@color/main_LinearLayout_background">

        <ImageView
            android:id="@+id/iv_brand_dashi"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
             />

        <TextView
            android:id="@+id/tv_brand_dashi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/iv_brand_dashi"
            android:textColor="#333333"
            android:textSize="32px"/>

        <ImageView
            android:layout_width="14px"
            android:layout_height="24px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:src="@mipmap/right_icon"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color_second"/>

    <RelativeLayout
        android:id="@+id/layout_zhuanchang"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@color/main_LinearLayout_background">

        <ImageView
            android:id="@+id/iv_zhuanchang"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:src="@mipmap/pub_list_zhuanchan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/iv_zhuanchang"
            android:text="专场"
            android:textColor="#333333"
            android:textSize="32px"/>

        <ImageView
            android:layout_width="14px"
            android:layout_height="24px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:src="@mipmap/right_icon"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color_second"/>

</LinearLayout>