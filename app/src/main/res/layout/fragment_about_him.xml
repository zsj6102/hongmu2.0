<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color_second"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_LinearLayout_background"
                android:gravity="center_horizontal"
                android:padding="@dimen/margin_5dp"
                android:textColor="@color/main_red"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_LinearLayout_background"
                android:orientation="horizontal">

                <com.property.colpencil.colpencilandroidlibrary.Ui.SelectableRoundedImageView
                    android:id="@+id/iv_head"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:layout_marginBottom="19dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="19dp"
                    app:sriv_oval="true"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textColor="@color/main_red"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_lv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/cardwall_level"/>

                        <TextView
                            android:id="@+id/tv_lv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:textColor="@color/color_192a46"
                            android:textSize="10sp"/>

                        <ImageView
                            android:id="@+id/iv_store_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:src="@mipmap/cardwall_business"/>

                        <TextView
                            android:id="@+id/tv_store_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"

                            android:textColor="@color/color_192a46"
                            android:textSize="10sp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
           <LinearLayout
               android:layout_width="wrap_content"
               android:visibility="gone"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="好评："
                            android:textColor="@color/text_color_thirst"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_praise_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="96%"
                            android:textColor="@color/main_red"
                            android:textSize="10sp"/>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@color/line_color_first"/>
           </LinearLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:src="@mipmap/addressgray"/>


                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="泉州市"
                            android:textColor="@color/main_red"
                            android:textSize="10sp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/unfocus_layout"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:background="@drawable/line2_line_transparent_shape"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/focus_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"
                            android:textColor="@color/main_brown"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/befocus_layout"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:background="@drawable/line2_line_transparent_shape"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="取消关注"
                            android:textColor="@color/main_brown"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <!--<LinearLayout-->
                    <!--android:layout_width="60dp"-->
                    <!--android:layout_height="25dp"-->
                    <!--android:layout_marginTop="5dp"-->
                    <!--android:background="@drawable/line2_line_transparent_shape"-->
                    <!--android:gravity="center"-->
                    <!--android:orientation="horizontal">-->

                    <!--<ImageView-->
                    <!--android:layout_width="15dp"-->
                    <!--android:layout_height="15dp"-->
                    <!--android:src="@drawable/focus_icon"/>-->

                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="打赏"-->
                    <!--android:textColor="@color/main_brown"-->
                    <!--android:textSize="14sp"/>-->

                    <!--</LinearLayout>-->
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_store_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_LinearLayout_background"
                android:lineSpacingExtra="3dp"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:textColor="@color/main_brown"
                android:textSize="14sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color_second"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color_second"/>

                <RelativeLayout
                    android:id="@+id/main_introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:background="@color/main_LinearLayout_background"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="商家介绍"
                        android:textColor="@color/text_color_first"
                        android:textSize="@dimen/main_title_size"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/right_icon"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color_second"/>
            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layout_refer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color_second"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:background="@color/main_LinearLayout_background"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="推荐方"
                        android:textColor="@color/text_color_first"
                        android:textSize="@dimen/main_title_size"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_reffer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxEms="12"
                            android:maxLines="1"
                            android:text="33333"
                            android:textColor="@color/text_color_thirst"
                            android:textSize="@dimen/main_text_size"/>

                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color_second"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_cat"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color_second"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:background="@color/main_LinearLayout_background"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="主创类别"
                        android:textColor="@color/text_color_first"
                        android:textSize="@dimen/main_title_size"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_cat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxEms="12"
                            android:maxLines="1"
                            android:text="33333"
                            android:textColor="@color/text_color_thirst"
                            android:textSize="@dimen/main_text_size"/>

                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color_second"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color_second"/>

                <RelativeLayout
                    android:id="@+id/main_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"

                    android:background="@color/main_LinearLayout_background"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="他的关注"
                        android:textColor="@color/text_color_first"
                        android:textSize="@dimen/main_title_size"/>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/right_icon"/>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color_second"/>
            </LinearLayout>

            <com.property.colpencil.colpencilandroidlibrary.Ui.AdapterView.MosaicGridView
                android:id="@+id/like_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_fff5f4"
                android:gravity="center_horizontal"
                android:numColumns="4"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color_second"/>
            <RelativeLayout
                android:id="@+id/main_fans"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:background="@color/main_LinearLayout_background"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="他的粉丝"
                    android:textColor="@color/text_color_first"
                    android:textSize="@dimen/main_title_size"/>

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_icon"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color_second"/>
</LinearLayout>
            <com.property.colpencil.colpencilandroidlibrary.Ui.AdapterView.MosaicGridView
                android:id="@+id/fans_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_fff5f4"
                android:gravity="center_horizontal"
                android:numColumns="4"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>