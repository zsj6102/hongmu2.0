<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line_color_thirst"
        android:orientation="vertical">

        <include layout="@layout/base_header"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:background="@color/main_LinearLayout_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color_second"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="118px"
                    android:orientation="vertical"
                    android:paddingLeft="30px"
                    android:paddingRight="30px">

                    <RelativeLayout
                        android:id="@+id/ll_No"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_dingdan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单号："
                            android:textColor="@color/text_color_thirst"
                            android:textSize="26px"/>

                        <TextView
                            android:id="@+id/orderdetails_No"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/tv_dingdan"
                            android:textColor="@color/text_color_first"
                            android:textSize="26px"/>

                        <TextView
                            android:id="@+id/orderdetails_State"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="订单状态"
                            android:textColor="@color/main_red"
                            android:textSize="26px"/>
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/orderdetails_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:text="1111212"
                        android:textColor="@color/text_color_thirst"
                        android:textSize="24px"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color_second"/>

                <LinearLayout
                    android:background="@color/main_LinearLayout_background"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginLeft="30px"
                        android:layout_width="30px"
                        android:layout_height="28px"
                        android:src="@mipmap/shangjia"/>
                    <TextView
                        android:id="@+id/tv_storename"
                        android:layout_marginLeft="10px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="28px"
                        android:textColor="#333333"/>
                    <ImageView
                        android:layout_marginLeft="20px"
                        android:layout_width="18px"
                        android:layout_height="28px"
                        android:src="@mipmap/right_icon"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color_second"/>

                <com.property.colpencil.colpencilandroidlibrary.Ui.WrapHeightListView
                    android:id="@+id/orderdetails_GoodInfor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/main_background"
                    android:dividerHeight="20px"
                    android:scrollbars="none"/>


                <View
                    android:id="@+id/itemOrder_View"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color_second"/>
                <View

                    android:layout_width="match_parent"
                    android:layout_height="20px"
                    android:background="@color/main_background"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@color/main_LinearLayout_background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="30px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货地址："
                            android:textColor="@color/text_color_thirst"
                            android:textSize="22px"/>

                        <TextView
                            android:id="@+id/orderdetails_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_first"
                            android:textSize="22px"/>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:background="@color/line_color_second"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="30px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货人："
                            android:textColor="@color/text_color_thirst"
                            android:textSize="24px"/>

                        <TextView
                            android:id="@+id/orderdetails_people"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_first"
                            android:textSize="24px"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_color_second"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="30px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="买家留言："
                            android:textColor="#333333"
                            android:textSize="24px"/>

                        <TextView
                            android:id="@+id/leave_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_first"
                            android:textSize="24px"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_color_second"/>
                </LinearLayout>
                <View

                    android:layout_width="match_parent"
                    android:layout_height="20px"
                    android:background="@color/main_background"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="86px"

                    android:paddingLeft="@dimen/paddingLeft"
                    android:paddingRight="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="全部商品"
                        android:textColor="@color/text_color_first"
                        android:textSize="28px"/>

                    <TextView
                        android:id="@+id/orderdetails_goodsPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/main_red"
                        android:textSize="28px"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color_second"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="86px"
                    android:paddingLeft="30px"
                    android:paddingRight="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="邮费"
                        android:textColor="@color/text_color_first"
                        android:textSize="28px"/>

                    <TextView
                        android:id="@+id/orderdetails_postage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/main_red"
                        android:textSize="28px"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color_second"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="86px"
                    android:paddingLeft="30px"
                    android:paddingRight="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="优惠券"
                        android:textColor="@color/text_color_first"
                        android:textSize="28px"/>

                    <TextView
                        android:id="@+id/orderdetails_goodsCoupons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/main_red"
                        android:textSize="28px"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color_second"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="86px"
                    android:paddingLeft="30px"
                    android:paddingRight="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="代金券"
                        android:textColor="@color/text_color_first"
                        android:textSize="28px"/>

                    <TextView
                        android:id="@+id/orderdetails_goodsVoucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/main_red"
                        android:textSize="28px"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color_second"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="86px"
                    android:paddingLeft="30px"
                    android:paddingRight="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="促销折扣"
                        android:textColor="@color/text_color_first"
                        android:textSize="28px"/>

                    <TextView
                        android:id="@+id/orderdetails_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/main_red"
                        android:textSize="28px"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color_second"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="86px"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/orderdetails_payName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_first"
                        android:textSize="28px"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="总计："
                        android:textColor="@color/text_color_first"
                        android:textSize="28px"/>

                    <TextView
                        android:id="@+id/orderdetails_goodsPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_red"
                        android:textSize="28px"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color_second"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color_second"/>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_deliveryFinished_orderDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:paddingBottom="20px"
            android:paddingTop="20px"
            android:visibility="visible">

            <TextView
                android:id="@+id/order_btn1"
                android:layout_width="140px"
                android:layout_height="60px"
                android:layout_marginRight="30px"
                android:background="@drawable/cccccc_radius_splite_line_second"
                android:gravity="center"
                android:text="申请退款"
                android:textColor="@color/text_color_first"
                android:textSize="28px"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/order_btn2"
                android:layout_width="140px"
                android:layout_height="60px"
                android:layout_marginRight="30px"
                android:background="@drawable/cccccc_radius_splite_line_second"
                android:gravity="center"
                android:text="查看物流"
                android:textColor="@color/text_color_first"
                android:textSize="28px"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/order_btn3"
                android:layout_width="140px"
                android:layout_height="60px"
                android:layout_marginRight="30px"
                android:background="@drawable/red_solid_shape"
                android:gravity="center"
                android:text="确认收货"
                android:textColor="@color/white"
                android:textSize="28px"
                android:visibility="invisible"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>